<div class="column is-6 is-offset-3">

  <div class="media-content comment">

    <div class="content">
      <p>
        <strong><%= comment.user.name %></strong> <small><%= time_ago_in_words(comment.created_at) %></small>
        <br>
        <%= comment.body %>
      </p>
    </div>
    <nav class="level is-mobile">

      <div class="level-left">
        <% if logged_in? && equal_with_current_user?(comment.user) %>
          <%= link_to edit_article_comment_path(@article, comment), class: "level-item" do %>
          <span class="icon is-small"><i class="far fa-edit"></i></span>
          <% end %>

          <%= link_to article_comment_path(@article, comment), method: :delete, class: "level item", data: { confirm: "Are you sure you want to delete this comment?" } do %>
            <span class="icon is-small"><i class="far fa-trash-alt"></i></span>
          <% end %>
        <% end %>
      </div>
    </nav>
  </div>

</div>
