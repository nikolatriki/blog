<h1>New Article</h1>

<%# So Rails sintaksa%>
<%= form_with scope: :article, url: '/articles', local: true do |form| %>
<p>
  <%= form.label :title %>
  <%= form.text_field :title %>
</p>

<p>
  <%= form.label :body %>
  <%= form.text_area :body %>
</p>

<%= form.submit 'Save article' %>
<% end %>

